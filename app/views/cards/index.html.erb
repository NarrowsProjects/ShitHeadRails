<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div id="cards" class="min-w-full">
    <% @cards.each do |card| %>
    <%if card.color=="Hearts" && card.weight =~/11|2|3|7|10/  %>
     <%= render card %>
    <% end %>
    <% end %>
  </div>
</div>
